<div class="w-full md:p-10">

  <div class="flex flex-wrap md:gap-10 overflow-x-auto w-full md:p-10 md:space-x-20">

    <% members.each do |member| %>

      <div class="w-[400px] h-auto rounded-3xl flex-shrink-0 pt-20">
        <%= image_tag(member.image_url.presence || 'placeholder.jpg', class: "w-[400px] h-[400px] ") %>
        <div class="w-full md:px-6 text-[#1E1E1E] p-4">
          <div class="font-bold mt-2"><%= member.name %></div>
          
          <div class="text-sm text-gray-600"><%= truncate(member.description, length: 40) %></div>

        </div>
      </div>

    <% end %>
  </div>
</div>