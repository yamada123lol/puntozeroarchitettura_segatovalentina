<div class="w-full p-10">

  <div class="flex flex-row gap-6 overflow-x-auto w-full p-10">

    <% members.each do |member| %>

      <div class="w-[450px] rounded-4xl shadow-2xl">
        <%= image_tag(member.image_url.presence || 'placeholder.jpg', class: "w-full rounded-t-2xl") %>
        <div class="w-full px-6 text-[#1E1E1E] p-6">
          <div class="font-bold mt-2"><%= member.name %></div>
          
          <div class="text-sm text-gray-600"><%= truncate(member.description, length: 40) %></div>

        </div>
      </div>

    <% end %>
  </div>
</div>